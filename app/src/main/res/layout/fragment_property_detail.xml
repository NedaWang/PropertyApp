<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sale_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/property_image_slider"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:iss_corner_radius="15"
            app:iss_error_image="@drawable/image_not_available"
            app:iss_selected_dot="@drawable/default_selected_dot"
            app:iss_unselected_dot="@drawable/default_unselected_dot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sale_type" />

        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/property_image_slider"
            app:layout_constraintTop_toBottomOf="@id/property_image_slider"
            app:srcCompat="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"
            android:text="address"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/property_image_slider"
            app:layout_constraintStart_toEndOf="@id/address_icon"
            app:layout_constraintTop_toTopOf="@+id/address_icon" />

        <ImageView
            android:id="@+id/money_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/address_icon"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:srcCompat="@drawable/ic_baseline_attach_money_24" />

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/property_image_slider"
            app:layout_constraintStart_toEndOf="@id/address_icon"
            app:layout_constraintTop_toTopOf="@id/money_icon" />

        <ImageView
            android:id="@+id/bed_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/address_icon"
            app:layout_constraintTop_toBottomOf="@id/money_icon"
            app:srcCompat="@drawable/bed" />

        <TextView
            android:id="@+id/bed_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:text="bedroom"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/property_image_slider"
            app:layout_constraintStart_toEndOf="@id/address_icon"
            app:layout_constraintTop_toTopOf="@id/bed_icon" />

        <ImageView
            android:id="@+id/bath_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/address_icon"
            app:layout_constraintTop_toBottomOf="@id/bed_icon"
            app:srcCompat="@drawable/bath" />

        <TextView
            android:id="@+id/bath_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:text="bathroom"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/property_image_slider"
            app:layout_constraintStart_toEndOf="@id/address_icon"
            app:layout_constraintTop_toTopOf="@id/bath_icon" />

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/address_icon"
            app:layout_constraintTop_toBottomOf="@id/bath_icon"
            app:srcCompat="@drawable/car" />

        <TextView
            android:id="@+id/car_park_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/property_image_slider"
            app:layout_constraintStart_toEndOf="@id/address_icon"
            app:layout_constraintTop_toTopOf="@id/car_icon" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/car_icon" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="description"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description"
            android:orientation="vertical">

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/linear_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>